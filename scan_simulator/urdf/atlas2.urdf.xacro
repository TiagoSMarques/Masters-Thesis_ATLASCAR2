          </horizontal>
        </scan>
        <range>
          <min>1</min>
          <max>30</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="gpu_laser" filename="libgazebo_ros_gpu_laser.so">
        <namespace>/s0</namespace>
